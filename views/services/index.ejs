<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Услуги</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Услуги</h1>
    <a href="/" class="btn btn-secondary mb-3">На главную</a>
    <a href="/services/new" class="btn btn-success mb-3">Добавить</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Категория</th>
            </tr>
        </thead>
        <tbody>
            <% services.forEach(service => { %>
                <tr>
                    <td><%= service.id_услуга %></td>
                    <td><%= service.название %></td>
                    <td><%= service.описание %></td>
                    <td><%= service.цена %></td>
                    <td><%= service.id_категория %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html> 