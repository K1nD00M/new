<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Гости</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Гости</h1>
    <a href="/" class="btn btn-secondary mb-3">На главную</a>
    <a href="/guests/new" class="btn btn-success mb-3">Добавить</a>
    <form class="row mb-3" method="GET" action="/guests">
        <div class="col-auto">
            <input type="text" name="fio" class="form-control" placeholder="Поиск по ФИО" value="<%= typeof query !== 'undefined' ? query : '' %>">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Найти</button>
        </div>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Почта</th>
                <th>Паспорт</th>
                <th>Дата регистрации</th>
                <th>Дата въезда</th>
                <th>Статус</th>
                <th>Баллы</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            <% guests.forEach(guest => { %>
                <tr>
                    <td><%= guest.id %></td>
                    <td><%= guest.full_name %></td>
                    <td><%= guest.phone %></td>
                    <td><%= guest.email %></td>
                    <td><%= guest.passport %></td>
                    <td><%= guest.registration_date %></td>
                    <td><%= guest.check_in_date %></td>
                    <td><%= guest.status %></td>
                    <td><%= guest.points %></td>
                    <td>
                        <a href="/guests/<%= guest.id %>/edit" class="btn btn-sm btn-primary">Редактировать</a>
                        <form action="/guests/<%= guest.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html> 