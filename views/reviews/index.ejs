<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Отзывы</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Отзывы</h1>
    <a href="/" class="btn btn-secondary mb-3">На главную</a>
    <a href="/reviews/new" class="btn btn-success mb-3">Добавить</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО гостя</th>
                <th>Оценка</th>
                <th>Комментарий</th>
                <th>Дата отзыва</th>
                <th>Ответ</th>
                <th>Дата ответа</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            <% reviews.forEach(review => { %>
                <tr>
                    <td><%= review.id %></td>
                    <td><%= review.guest_name %></td>
                    <td>
                        <% for(let i = 0; i < review.rating; i++) { %>
                            <span class="text-warning">★</span>
                        <% } %>
                        <% for(let i = review.rating; i < 5; i++) { %>
                            <span class="text-muted">☆</span>
                        <% } %>
                    </td>
                    <td><%= review.comment %></td>
                    <td><%= review.review_date %></td>
                    <td><%= review.response %></td>
                    <td><%= review.response_date %></td>
                    <td>
                        <a href="/reviews/<%= review.id %>/edit" class="btn btn-sm btn-primary">Редактировать</a>
                        <form action="/reviews/<%= review.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html> 