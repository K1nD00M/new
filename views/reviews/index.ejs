<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Отзывы</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Отзывы</h1>
    <a href="/" class="btn btn-secondary mb-3">На главную</a>
    <a href="/reviews/new" class="btn btn-success mb-3">Добавить</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО гостя</th>
                <th>Оценка</th>
                <th>Комментарий</th>
                <th>Дата отзыва</th>
                <th>Ответ</th>
                <th>Дата ответа</th>
            </tr>
        </thead>
        <tbody>
            <% reviews.forEach(review => { %>
                <tr>
                    <td><%= review.id_отзыва %></td>
                    <td><%= review.ФИО_гостя %></td>
                    <td><%= review.оценка %></td>
                    <td><%= review.комментарий %></td>
                    <td><%= review.дата_отзыва %></td>
                    <td><%= review.ответ %></td>
                    <td><%= review.дата_ответа %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html> 