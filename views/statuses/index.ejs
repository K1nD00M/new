<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Статусы брони</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Статусы брони</h1>
    <a href="/" class="btn btn-secondary mb-3">На главную</a>
    <a href="/statuses/new" class="btn btn-success mb-3">Добавить</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Забронировано</th>
                <th>Оплачено</th>
                <th>На уборке</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            <% statuses.forEach(status => { %>
                <tr>
                    <td><%= status.id %></td>
                    <td>
                        <% if (status.is_booked === 'true') { %>
                            <span class="badge bg-success">Да</span>
                        <% } else { %>
                            <span class="badge bg-danger">Нет</span>
                        <% } %>
                    </td>
                    <td>
                        <% if (status.is_paid === 'true') { %>
                            <span class="badge bg-success">Да</span>
                        <% } else { %>
                            <span class="badge bg-danger">Нет</span>
                        <% } %>
                    </td>
                    <td>
                        <% if (status.is_cleaning === 'true') { %>
                            <span class="badge bg-success">Да</span>
                        <% } else { %>
                            <span class="badge bg-danger">Нет</span>
                        <% } %>
                    </td>
                    <td>
                        <a href="/statuses/<%= status.id %>/edit" class="btn btn-sm btn-primary">Редактировать</a>
                        <form action="/statuses/<%= status.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html> 